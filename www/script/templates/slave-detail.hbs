<h3>{{ name }}</h3>
<ul class="list">
    <li><strong>Status:</strong> <div id="slave-status"></div></li>
    <li><strong>Hostname:</strong> {{ fqdn }}</li>
    <li><strong>Health:</strong> {{> slave:health }}</li>
    <li><strong>Builders:</strong> {{> slave:buildersPopup }}</li>
    {{#if showEID}}
        <li><strong>Yumi URL: </strong> <a href="{{ slaveManagerUrl }}/{{ eid }}">{{ slaveManagerUrl }}/{{ eid }}</a>
        </li>
    {{/if}}
    {{#if tags}}
    <li><strong>Tags:</strong> {{ tags }}</li>
    {{/if}}

    {{#if shutdownURL}}
        <form method="post" action="{{ shutdownURL}}" class="command">
            <strong>Shutdown:</strong>
            {{#if graceful}}
                Slave will <strong>disconnect</strong> gracefully when it is idle.
            {{else}}
                Request slave to <input class="link-button" type="submit" value="disconnect"/> gracefully
            {{/if}}
        </form>
    {{/if}}
</ul>